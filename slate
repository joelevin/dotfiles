config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
# bind right:alt       resize +10% +0
# bind left:alt        resize -10% +0
# bind up:alt          resize +0   -10%
# bind down:alt        resize +0   +10%
# bind right:ctrl;alt  resize -10% +0 bottom-right
# bind left:ctrl;alt   resize +10% +0 bottom-right
# bind up:ctrl;alt     resize +0   +10% bottom-right
# bind down:ctrl;alt   resize +0   -10% bottom-right
bind m:ctrl;cmd;alt move screenOriginX;screenOriginY screenSizeX;screenSizeY
bind 1:cmd;shift move screenOriginX;screenOriginY windowSizeX;windowSizeY 0
bind 2:cmd;shift move screenOriginX;screenOriginY windowSizeX;windowSizeY 1

# Push Bindings
bind right:ctrl;cmd;alt  push right bar-resize:screenSizeX/2
bind left:ctrl;cmd;alt   push left  bar-resize:screenSizeX/2
bind up:ctrl;cmd;alt     push up    bar-resize:screenSizeY/2
bind down:ctrl;cmd;alt   push down  bar-resize:screenSizeY/2

# Control Bindings
bind up:ctrl;alt;shift corner top-right resize:screenSizeX/2;screenSizeY/2
bind right:ctrl;alt;shift corner bottom-right resize:screenSizeX/2;screenSizeY/2
bind down:ctrl;alt;shift corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind left:ctrl;alt;shift corner top-left resize:screenSizeX/2;screenSizeY/2

